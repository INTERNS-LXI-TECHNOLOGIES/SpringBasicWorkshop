
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">

  <context-param>
		<param-name>jdbcURL</param-name>
		<param-value>jdbc:mysql://localhost:3306/lxisoft</param-value>
	</context-param>

	<context-param>
		<param-name>jdbcUsername</param-name>
		<param-value>root</param-value>
	</context-param>

	<context-param>
		<param-name>jdbcPassword</param-name>
		<param-value>Mubashir24092000</param-value>
	</context-param>


<servlet>

<servlet-name>VegetablePage</servlet-name>
<servlet-class>main.java.com.lxisoft.servlets.ReadAndDeleteVegetableServlet</servlet-class>

</servlet>
<servlet-mapping>
<servlet-name>VegetablePage</servlet-name>
<url-pattern>/</url-pattern>
<url-pattern>/delete-vegetable</url-pattern>

</servlet-mapping>


<servlet>

<servlet-name>AddVegetablePage</servlet-name>
<servlet-class>main.java.com.lxisoft.servlets.CreateVegetableServlet</servlet-class>

</servlet>

	
<servlet-mapping>
<servlet-name>AddVegetablePage</servlet-name>
<url-pattern>/add-vegetable</url-pattern>
</servlet-mapping>

<servlet>

<servlet-name>searchVegetable</servlet-name>
<servlet-class>main.java.com.lxisoft.servlets.SearchServlet</servlet-class>

</servlet>

	
<servlet-mapping>
<servlet-name>searchVegetable</servlet-name>
<url-pattern>/search</url-pattern>
</servlet-mapping>



<servlet>

<servlet-name>updateVegetablePage</servlet-name>
<servlet-class>main.java.com.lxisoft.servlets.UpdateVegetableServlet</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>updateVegetablePage</servlet-name>
<url-pattern>/update-vegetable</url-pattern>
</servlet-mapping>


<servlet>

<servlet-name>imageVegetablePage</servlet-name>
<servlet-class>main.java.com.lxisoft.servlets.ImageServlet</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>imageVegetablePage</servlet-name>
<url-pattern>/image</url-pattern>
</servlet-mapping>

<servlet>

<servlet-name>logOut</servlet-name>
<servlet-class>main.java.com.lxisoft.servlets.LogOutServlet</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>logOut</servlet-name>
<url-pattern>/log-out</url-pattern>
</servlet-mapping>

<security-constraint>
		<web-resource-collection>
			<web-resource-name>user</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/update-vegetable</url-pattern>
			<url-pattern>/delete-vegetable</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

  <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
         <form-login-page>/login.jsp</form-login-page>
         <form-error-page>/login-error.jsp</form-error-page>
      </form-login-config>
   </login-config>




</web-app>